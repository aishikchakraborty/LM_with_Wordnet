{
  "dataset_reader": {
    "type": "lex_rel_classification"
  },
  "train_data_path": "extrinsic_tasks/datasets/hyperlex/splits/lexical/hyperlex_training_all_lexical.txt",
  "validation_data_path": "extrinsic_tasks/datasets/hyperlex/splits/lexical/hyperlex_dev_all_lexical.txt",
  "test_data_path": "extrinsic_tasks/datasets/hyperlex/splits/lexical/hyperlex_test_all_lexical.txt",
  // "train_data_path": "extrinsic_tasks/datasets/hyperlex/splits/random/hyperlex_training_all_random.txt",
  // "validation_data_path": "extrinsic_tasks/datasets/hyperlex/splits/random/hyperlex_dev_all_random.txt",
  // "test_data_path": "extrinsic_tasks/datasets/hyperlex/splits/random/hyperlex_test_all_random.txt",
  "evaluate_on_test": true,
  "model": {
    "type": "lex_rel_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "./data/glove/glove.6B.300d.txt",
        // "pretrained_file": "output/glove_retro_syn_hyp_mer_lower_wn_v2/2019_03_18_17_00/emb_glove_retro_syn_hyp_mer_300_300_100_cosine_wn_v2.txt",
        // "pretrained_file": "output/glove_retro_syn_lower_wn_v2/2019_03_16_14_37/emb_glove_retro_syn_300_300_100_cosine_wn_v2.txt",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "shared_feedforward": {
      "input_dim": 300,
      "num_layers": 1,
      "hidden_dims": 300,
      "activations": "linear",
      "dropout": 0.2
    },
    "classifier_feedforward_word1": {
      "input_dim": 300,
      "num_layers": 1,
      "hidden_dims": 140,
      "activations": "linear",
      "dropout": 0.2
    },
    "classifier_feedforward_word2": {
      "input_dim": 300,
      "num_layers": 1,
      "hidden_dims": 140,
      "activations": "linear",
      "dropout": 0.2
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["word1", "num_tokens"]],
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 30,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
